# Laravel Sanctum Integration Test Environment Configuration
# Copy this file to .env and fill in your actual test credentials
# DO NOT COMMIT THE .env FILE TO VERSION CONTROL

# Base API URL for your Laravel Sanctum API
# Examples:
#   - Local development: http://localhost:8000
#   - Staging: https://staging.yourapp.com
#   - Production: https://api.yourapp.com
API_BASE_URL=https://your-api.example.com

# Test user credentials - create these users in your Laravel app for testing
# These should be real test accounts in your application
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=password

# Alternative test user for multi-user scenarios
TEST_USER_2_EMAIL=test2@example.com
TEST_USER_2_PASSWORD=password

# Test configuration
TEST_TIMEOUT_MS=30000
TEST_RETRY_ATTEMPTS=3

# Optional: Pre-generated API token for testing token-based authentication
# You can generate this in your Laravel app: User::first()->createToken('test')->plainTextToken
# API_TOKEN=1|your-test-api-token-here